<%= render partial: 'comment_errors', locals: {comment: @comment} %>
<%= form_for ([@post, @comment]) do |f| %>
    <div class="field">
        <%= f.label :content, "Enter your comment" %> <br /> 
        <%= f.text_area :content %>
    </div>

    <div class="field">
        <%= f.submit "Submit comment" %>
    </div>
<% end %>  